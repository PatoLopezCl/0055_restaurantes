<h1> Lista de restaurantes </h1>

<%= link_to "Nuevo restaurante", nuevo_restaurante_patch %>

<table>
    <tr>
        <th>id</th>
        <th>nombre</th>
        <th>Tipo de comida</th>
        <th>Acciones</th>
    </tr>

    <% @restaurantes.each do |restaurante| %>
            <tr>
                <td><%= restaurante.id %></td>
                <td><%= link_to restaurante.nombre, restaurante_path(restaurante) %></td>
                <td><%= restaurante.tipo_comida.tipo %></td>
                <td>
                  <%= link_to "editar", editar_restaurantes_patch(restaurante) %>
                  <%= link_to "eliminar", restaurante_path(restaurante), method: :delete, data: { confirm: "Seguro que quiere eliminar el restaurante?"} %>
                </td>
            </tr>
    <  % end>
    </table>